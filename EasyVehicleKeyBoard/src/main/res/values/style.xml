<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="VehicleKeyboardStyle">
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginStart">1dp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginEnd">1dp</item>
        <item name="android:layout_marginBottom">6dp</item>
    </style>

    <style name="VehicleKeyboardKey" parent="@style/VehicleKeyboardStyle">
        <item name="android:textColor">@color/keyText</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="shape_shadowColor">@color/shadow</item>
        <item name="shape_shadowSize">2dp</item>
        <item name="shape_radius">3dp</item>
        <item name="shape_solidPressedColor">@color/keyboard_dark_cell_bg_color</item>
        <item name="shape_solidColor">@color/white</item>
        <!--    <item name="android:background">@drawable/btn_white</item>-->
    </style>


    <style name="VehicleKeyboardKeyDisable" parent="@style/VehicleKeyboardKey">
        <item name="shape_solidColor">@color/keyboard_dark_cell_bg_color</item>
<!--        <item name="android:background">@drawable/btn_gray</item>-->
    </style>

</resources>